<%- include('parts/header.ejs') %>

    <br><br><br><br><br><br><br>

    <div class="container">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Price</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>

                <% for(let book of mybooks ) { %>
                    <tr>
                        <th><img width="50px" height="50px" src="/uploads/<%= book.image %> "></th>
                        <td>
                            <%= book.title %>
                        </td>
                        <td>
                            <%= book.author %>
                        </td>
                        <td>
                            <%= book.price %>
                        </td>
                        <td>
                            <a class=" btn btn-danger" href="/mybooks/delete/<%= book._id %> ">Delete</a>
                            <a class=" btn btn-secondary" href="/mybooks/update/<%= book._id %> ">Update</a>
                        </td>
                    </tr>
                    <% } %>

            </tbody>
        </table>
    </div>


    <br><br><br><br><br><br>
    <%- include('parts/footer.ejs') %>